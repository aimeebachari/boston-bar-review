
<div class="row container">
  <div class="barlist columns large-6 small-12">
    <div>
      <h3>Get Your Drink On üçª</h3>
      <div id="BarList">

      </div>

    </div>
  </div>

  <div class="bar-form columns large-6 small-12">
    <h3>New Bar Form</h3>
    <%= form_for(@bar) do |f| %>

    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :address %>
      <%= f.text_field :address %>
    </div>

    <div class="field">
      <%= f.label :city %>
      <%= f.text_field :city %>
    </div>

    <div class="field">
      <%= f.label :state %>
      <%= f.text_field :state %>
    </div>

    <div class="field">
      <%= f.label :zip %>
      <%= f.text_field :zip %>
    </div>

    <div class="field">
      <%= f.label :url %>
      <%= f.text_field :url %>
    </div>

    <div class="field">
      <%= f.label :description %>
      <%= f.text_field :description %>
    </div>

    <div class="actions">
      <%= f.submit(value="Add Bar") %>
    </div>

    <% end %>
  </div>
</div>
