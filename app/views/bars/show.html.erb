
<div class="row container">
  <div class="columns large-6 small-12">

    <% if @average.to_f.round(1).nan? %>
      <h3>Not Yet Rated </h3>
    <% else %>
      <h3>Rating: <%= @average.to_f.round(1) %> </h3>
    <% end %>

<br />
<h1> <%= @bar.name %> </h1>

    <div id="bar-details">
      <p> <%= @bar.address %> </p>
      <p> <%= @bar.city %>, <%= @bar.state %>, <%= @bar.zip %> </p>
    </div>

    <div id="bar-details">
      <% unless @bar.description.nil? %>
        <p> <%= @bar.description %> </p>
      <% end %>
    </div>
  </div>


  <div class="barlist columns large-6 small-12">
    <div>
      <%= image_tag("beer.jpg") %>
    </div>
  </div>

<% if @user.id == @bar.user_id || @user.admin? %>
  <div>
    <%= link_to 'Edit Bar', edit_bar_path(@bar) %>
  </div>
<% end %>


<div>
  <% unless @bar.url.nil? %>
    <p> <%= @bar.url %> </p>
  <% end %>

</div>

<h3>Reviews:</h3>

<div>
  <% unless @bar.reviews.nil? %>
    <ul>
      <% @bar.reviews.each do |review| %>
        <% if @user.id == review.user_id || @user.admin? %>
          <li> <%= review.rating %> | <%= review.body %> |
            <%= link_to 'Edit', edit_bar_review_path(@bar, review) %> |
            <%= link_to 'Delete', bar_review_path(@bar, review), method: :delete, params:{review: review.id}, data: {confirm: "Are you sure?"} %>
            <h1 class="item-title" data-id="<%= review.id.to_s %>" id="<%= review.id.to_s %>"</h1>
          </li>
        <% else %>
          <li> <%= review.rating %> | <%= review.body %> </li>
        <% end %>
      <% end %>
    </ul>
  <% end %>
  <div id="ReviewList"></div>
</div>

<div>
  <%= link_to "Add Review", new_bar_review_path(@bar) %>
</div>
